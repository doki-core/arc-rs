{
    "name": "arc-workspace",
    "private": true,
    "scripts": {
        "u": "cargo upgrade --workspace",
        "build": "cargo build --release",
        "test": "cargo test --release",
        "fmt": "cargo fmt --all",
        "fix": "cargo fix --allow-dirty",
        "reset": "git reset Head~ --soft",
        "pub": "cargo-publish-all --yes --allow-dirty --no-verify1 --verbose",
        "lsp":  "cargo install --path projects/arc-lsp --debug",
        "web":  "cd projects/arc-preview && trunk serve"
    }
}
